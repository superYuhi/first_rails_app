<div class="main users-new">
  <div class="container">
    <i class="fas fa-sign-in-alt login-mark"></i>
    <h1 class="login-heading">LogIn</h1>
    <div class="form users-form">
      <div class="form-body">
        <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>
        <%= form_tag("/login") do %>
          <p>Email</p>
          <input name="email" value="<%= @email %>">
          <p>Password</p>
          <input name="password" type="password" value="<%= @password %>">
          <h6><テスト用><br>メールアドレス:test<br>パスワード:test<br></h6>
          <input type="submit" value="LogIn">
        <% end %>
      </div>
    </div>
  </div>
</div>


<style type="text/css">
  .login-color a{
    color: black;
    background-color: white;
    border-radius: 5px;
  }
</style>
