<div class="main posts-show">
  <div class="container">
    <i class="far fa-address-card posts-mark"></i>
    <h1 class="posts-heading">Posts</h1>
    <div class="posts-show-item">
      <div class="post-user-name">
        <img src="<%= "/user_images/#{@user.image_name}" %>">
        <%= link_to(@user.name, "/users/#{@user.id}") %>
      </div>
      <p>
        <%= @post.content %>
      </p>
      <div class="post-time">
        <%= @post.created_at %>
      </div>
      <% if Like.find_by(user_id: @current_user.id, post_id: @post.id) %>
        <%= link_to("/likes/#{@post.id}/destroy", {method: "post"}) do %>
          <span class="fas fa-thumbs-up likesU-mark-unlike"></span>
        <% end %>
      <% else %>
        <%= link_to("/likes/#{@post.id}/create", {method: "post"}) do %>
          <span class="fa fa-thumbs-up likesU-mark-like"></span>
        <% end %>
      <% end %>
      <%= @likes_count %>
      <% if @post.user_id == @current_user.id %>
      <div class="post-menus">
        <%= link_to("Edit", "/posts/#{@post.id}/edit") %>
        <%= link_to("Delete", "/posts/#{@post.id}/destroy", {method: "post"}) %>
      </div>
      <% end %>
    </div>
  </div>
</div>
